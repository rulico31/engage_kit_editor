{
  "name": "engage-kit-editor",
  "private": true,
  "version": "0.1.1",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && vite build --config vite.config.viewer.ts && electron-builder",
    "build:web": "tsc && vite build && vite build --config vite.config.viewer.ts",
    "lint": "eslint .",
    "preview": "vite preview",
    "build:viewer": "tsc && vite build --config vite.config.viewer.ts",
    "test": "vitest",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.84.0",
    "electron-updater": "^6.6.2",
    "lucide-react": "^0.561.0",
    "react": "^19.1.1",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^19.1.1",
    "react-image-crop": "^11.0.10",
    "react-resizable": "^3.0.5",
    "react-resizable-panels": "^3.0.6",
    "react-window": "^2.2.3",
    "reactflow": "^11.11.4",
    "recharts": "^3.5.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.6.0",
    "@types/react": "^19.1.16",
    "@types/react-dom": "^19.1.9",
    "@types/react-image-crop": "^8.1.6",
    "@types/react-resizable": "^3.0.8",
    "@types/react-window": "^1.8.8",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/ui": "^4.0.16",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "eslint": "^9.36.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^16.4.0",
    "jsdom": "^27.4.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0",
    "vite": "^7.1.7",
    "vite-plugin-electron": "^0.29.0",
    "vitest": "^4.0.16"
  },
  "build": {
    "appId": "com.engage-kit.editor",
    "productName": "engage-kit-editor",
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "rulico31",
        "repo": "engage-kit-editor"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}